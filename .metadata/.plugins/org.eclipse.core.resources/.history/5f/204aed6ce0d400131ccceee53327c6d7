package com.czdurham.tasty.core.events.taster;

import java.util.UUID;

import com.czdurham.tasty.core.domain.tasting.TastingStatusDetails;
import com.czdurham.tasty.core.events.StatusEvent;

public class TasterStatusEvent extends StatusEvent<TastingStatusDetails> {
	private UUID key;
	
	protected TasterStatusEvent(UUID key) {
		this.key = key;
	}
	
	public TasterStatusEvent(UUID key, TastingStatusDetails status) {
		super(status);
		this.key = key;
	}

	public UUID getKey() {
		return key;
	}
	
	public static TasterStatusEvent notFound(UUID key) {
		return new TasterStatusEvent(key);
	}
}
